<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorBackground">@color/soothing_blue</item>
        <item name="buttonStyle">@style/BeatBoxButtonStrong</item>
    </style>

    <style name="BeatBoxButton" parent="Widget.AppCompat.Button">
        <item name="android:background"> @drawable/beat_box_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BeatBoxButtonStrong" parent="BeatBoxButton">
        <item name="android:textStyle">bold</item>


    </style>

</resources>